@model Roller.Repository.Customers.WalletDto
@{
    ViewData["Title"] = "AddWallet";
}
<br />
<br />
<br />
<br />
<div class="container pt-3">
    @*<h1 class="bg-info text-white">Register User</h1>*@
    <h1></h1>
    <div class="row pt-3" style="text-align:center">
        <div class="col-4">
            <form asp-action="AddWallet" asp-controller="Wallet" method="POST" autocomplete="off">
                <input type="hidden" name="accountNumber" value="@Model.AccountNumber" />
                <div class="form-group" style="text-align:center">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" autocomplete="nope" placeholder="enter amount..." />
                    <span asp-validation-for="Amount"></span>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-outline-primary">Proceed </button>
                </div>
            </form>
        </div>
    </div>
</div>
