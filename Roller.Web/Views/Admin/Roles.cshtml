
@using Roller.Web.Models.RoleViewModel
@using Microsoft.AspNetCore.Identity
@addTagHelper Roller.Web.TagHelpers.*, Roller.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<br />
<br />
<br />
<br />
<br />
<h1 class="bg-info text-white">All Roles</h1>
<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Users</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            @*<td i-role="@role.Id"></td>*@
            @*This attribute will call a Custom Tag Helper which will modify this td element to display a list of all the Users who are members of each Role.*@
            <td><a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Update" asp-route-id="@role.Id">Asign Role</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

